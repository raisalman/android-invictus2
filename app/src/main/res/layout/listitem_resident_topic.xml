<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true"
    android:columnCount="2"
    android:focusable="true"
    android:paddingHorizontal="10dp"
    android:paddingVertical="12dp">

    <LinearLayout
        android:id="@+id/llmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="@dimen/space_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:maxWidth="500dp"
                    android:maxLines="1"
                    android:minWidth="100dp"
                    android:text="Football ground Football ground Football ground Football ground Football ground"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black_272727" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top">

                    <TextView
                        android:id="@+id/textCount"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top"
                        android:background="@drawable/layout_bg_round_white_nopadding"
                        android:gravity="center"
                        android:textColor="@color/white_F7F7FF"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:visibility="invisible"
                        tools:text="100" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/txtTopicStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="5dp"
            android:text="Close"
            android:textColor="@color/red_E21533"
            android:textSize="16sp" />
    </LinearLayout>
</GridLayout>

<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:columnCount="2"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/llmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="@dimen/space_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:ellipsize="marquee"
                            android:gravity="center_vertical"
                            android:maxWidth="500dp"
                            android:maxLines="1"
                            android:minWidth="100dp"
                            android:text="Football ground Football ground Football ground Football ground Football ground"
                            android:textAlignment="textStart"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black_272727"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvLastMessageTime"
                            android:layout_width="@dimen/space_0"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="0.7"
                            android:alpha="0.5"
                            android:ellipsize="marquee"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Football ground dafa  adf asd ads a dsf ads f a sf adfa ds a fa d a"
                            android:textAlignment="textEnd"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/black_272727"
                            android:textSize="13sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvDescription"
                            android:layout_width="@dimen/space_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:alpha="0.8"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            tools:text="Test Description" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="top">

                            <TextView
                                android:id="@+id/textCount"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="top"
                                android:background="@drawable/layout_bg_round_white_nopadding"
                                android:gravity="center"
                                android:textColor="@color/white_F7F7FF"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:visibility="invisible"
                                tools:text="100" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</GridLayout>
